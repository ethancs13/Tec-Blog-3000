<h2>Edit Post</h2>

<!-- edit post form -->
<form class="editForm">
    <div class="entryDiv">
        <label for="userTitleEdit">Post Title:</label>
        <input class="formInput" type="text" id="userTitleEdit" value="{{post.title}}"/>
    </div>
    <div class="entryDiv">
        <label for="userBodyEdit">Post Description:</label>
        <textarea class="formInput" type="text" id ="userBodyEdit">{{post.post_content}}</textarea>
    </div>
    <div class="buttonDiv">
       <div class="editButtons">
        <button class="btn btn-primary" type="submit" id="editBtn">Submit</button>
    </div>
    <div class="editButtons">
        <button class="btn btn-primary" type="submit" id="deleteBtn">Delete</button>
    </div> 
    </div>
    
</form>

<script src="/js/edit.js"></script>
<script src="/js/delete.js"></script>