<h2>Edit Post</h2>

<p>Post Title: {{post.title}}</p>
<p>Post Content: {{post.post_content}}</p>
<!-- form for editing post -->
<form class="">
    <div class="">
        <label for="userTitleUpdate">Post Title:</label>
        <input class="" type="text" id="userTitleUpdate" value="{{post.title}}"/>
    </div>
    <div class="">
        <label for="userBodyUpdate">Post Body:</label>
        <textarea class="" type="text" id ="userBodyUpdate">{{post.post_content}}</textarea>
    </div>
    <div class="">
        <button class="btn btn-primary" type="submit" id="updateBtn">Submit</button>
    </div>
    <div class="">
        <button class="btn btn-primary" type="submit" id="deleteBtn">Delete</button>
    </div>
</form>

<script src="/js/update.js"></script>
<script src="/js/delete.js"></script>